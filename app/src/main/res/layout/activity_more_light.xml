<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:id="@+id/amore_light_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhuianniu"
            android:padding="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smore_light_title"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            android:textColor="@color/green"
            />
    </RelativeLayout>
    <View
        style="@style/LineStyle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="30dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/guangzhaobeijing"
            android:orientation="vertical">

            <TextView
                android:id="@+id/amore_light_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="当前CO2浓度:200"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/amore_light_setting_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="正常光照强度:200"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >


            <ImageView
                android:id="@+id/amore_light_lamp_iv"
                android:layout_width="@dimen/many_icon_size"
                android:layout_height="@dimen/many_icon_size"
                android:layout_marginLeft="15dp"
                android:background="@drawable/lamp_seletor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >


            <ImageView
                android:id="@+id/amore_light_buzzer_iv"
                android:layout_width="@dimen/many_icon_size"
                android:layout_height="@dimen/many_icon_size"
                android:background="@drawable/buzzer_seletor"
                android:layout_marginLeft="15dp"

                />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>