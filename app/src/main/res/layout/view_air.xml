<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dhome_item_double_view_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/item_cart_bg"
    android:id="@+id/vair_item"

    >
  <ImageView
      android:id="@+id/vair_level_iv"
      android:layout_width="@dimen/dhome_yujing_width"
      android:layout_height="@dimen/dhome_yujing_height"
      android:src="@drawable/p2"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      />

  <com.xbl.view.MyCircleImageView
      android:id="@+id/circle_circle_iv"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:src="@drawable/kongqi"
      android:layout_margin="10dp"
      android:layout_centerVertical="true"
      />
  <ImageView
      android:id="@+id/vair2_more_iv"
      android:layout_width="@dimen/dhome_back_size"
      android:layout_height="@dimen/dhome_back_size"
      android:src="@drawable/right"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/dhome_back_margin_right"
      android:layout_centerVertical="true"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_centerInParent="true"
      android:layout_marginLeft="@dimen/dhome_padding_pic"
      android:layout_toRightOf="@+id/circle_circle_iv"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/dhome_title_margin"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:text="空气指数"
          android:textSize="@dimen/dhome_list_title_size"
          />

      <TextView
          android:id="@+id/textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:gravity="center_vertical"
          android:text="PM2.5"
          android:textColor="@color/fbutton_color_orange"
          android:textSize="@dimen/dhome_list_title_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dhome_doublelinear_margin_top"
        android:layout_marginLeft="@dimen/dhome_linear_margin"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:text="温度"
          android:textSize="@dimen/dhome_line2_black_size"
          />
      <TextView
          android:id="@+id/vair_tem_value_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:text="35"
          android:textColor="@android:color/holo_red_dark"
          android:textSize="@dimen/dhome_line2_red_size"
          android:layout_marginLeft="@dimen/dhome_red_margin"
          android:layout_marginRight="10dp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:text="湿度"
          android:textSize="@dimen/dhome_line2_black_size"
          />
      <TextView
          android:id="@+id/vair_hum_value_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:text="32"
          android:textColor="@android:color/holo_red_dark"
          android:textSize="@dimen/dhome_line2_red_size"
          android:layout_marginLeft="@dimen/dhome_red_margin_left"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dhome_linear_margin"
        android:layout_marginTop="@dimen/dhome_doublelinear_margin_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:text="温度设定值："
          android:textColor="@android:color/holo_blue_bright"
          android:textSize="@dimen/dhome_line3_blue_size" />

      <TextView
          android:id="@+id/vair_tem_setting_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dhome_gray_margin_left"
          android:gravity="center_vertical"
          android:text="0-90"
          android:textColor="@color/gray"
          android:textSize="@dimen/dhome_line3_gray_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dhome_linear_margin"
        android:layout_marginTop="@dimen/dhome_doublelinear_margin_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dhome_last_view_bottom">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:text="湿度设定值："
          android:textColor="@android:color/holo_blue_bright"
          android:textSize="@dimen/dhome_line3_blue_size" />

      <TextView
          android:id="@+id/vair_hum_setting_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dhome_gray_margin_left"
          android:gravity="center_vertical"
          android:text="0-90"
          android:textColor="@color/gray"
          android:textSize="@dimen/dhome_line3_gray_size" />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>